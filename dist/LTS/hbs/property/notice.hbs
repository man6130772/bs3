{{#params-expression "isDaterange=true" "height=::getNoticeHeight" }}
  {{::callBlockHandle "header" this}}
{{/params-expression}}
{{::initArray this "list" 1}}
{{#eachArray list this}}
    {{#params-expression "this=@value" "i=@i" "index=@index" "isGroup=true"}}
	    <div class="line b-b line-lg pull-in"></div>
		{{#if isGroup}}
		<form data-group-name="list" data-group-index="{{i}}" class="module-form">
		{{/if}}
		<div class="form-group">
		   <div class="col-sm-12 bg-light padder-v-sm">
		      <a {{::href}} class="btn btn-rounded btn-icon btn-xs btn-default pull-right"  data-action="delItem"><i class="fa fa-remove"></i></a>
		      <p class="h5">头条{{index}}
		      {{#compare this.index '==' 1}}<span class="image-size">参考尺寸({{::callBlockHandle "getImageSize" i}})</span>{{/compare}}
		      </p>
		   </div>
		</div>
		{{#compare this.index '==' 1}}
			{{::callBlockHandle "image" this}}
		{{/compare}}
		
		{{#params-expression "label=标签" "name=tag" "value=@tag" "maxLength=::getTagMaxLength" }}
		  {{::callBlockHandle "text" this}}
		{{/params-expression}}

		{{#params-expression "label=头条内容" "name=title" "value=@title"}}
		  {{::callBlockHandle "text" this}}
		{{/params-expression}}

		{{::callBlockHandle "link" this}}

		{{#if isGroup}}
		</form>
		{{/if}}
    {{/params-expression}}
{{/eachArray}}

{{#params-expression "list=@list" "size=::getMaxNoticeSize" }}
{{#compare list.length "<" size}}
<div class="form-group p-t-md text-center">
	<a href="javascript:;" class="btn btn-s-md btn-default btn-info" data-group-name="list" data-action="addItem" rel="tooltip" title="" data-original-title="添加"><i class="fa fa-plus"></i></a>
</div>
{{/compare}}
{{/params-expression}}
{{#params-expression "label=链接位置" "name=linkType" "value=@linkType" "list=::getLinkTypeList" "text=::getLinkTypeText"  "defaultText=请选择"}}
  {{::callBlockHandle "select" this}}
{{/params-expression}}
{{!品牌页面、分类页面、页面列表、商品列表页、商品详情页、热门关键字、无跳转}}
{{#compare linkType "==" "1" }}
    {{#params-expression "label=页面" "name=pageId" "value=@pageId" "list=::getBrandsPageList" "text=::getBrandsPageText" "defaultText=请选择" "hiddenName=pageName"}}
      {{::callBlockHandle "select" this}}
    {{/params-expression}}
{{else compare linkType "==" "2" }}
<div class="form-group">
    <label class="col-sm-4 control-label">分类名称</label>
    <div class="col-sm-8">
      <input type="hidden" name="categoryNoList"  value="{{categoryNoList}}" />
      <div class="input-group">
        <input type="text" class="form-control"  name="categoryNameList"  value="{{categoryNameList}}" readonly  data-required="true" /> 
        <span class="input-group-btn"><button class="btn btn-default" type="button" data-role="categorySelected">选择</button> </span>
      </div>
    </div>
</div>
{{else compare linkType "==" "3" }}
    {{#params-expression "label=页面" "name=pageId" "value=@pageId" "list=::getPageList" "text=::getPageText" "defaultText=请选择" "hiddenName=pageName"}}
      {{::callBlockHandle "select" this}}
    {{/params-expression}}
{{else compare linkType "==" "4" }}
    {{#params-expression "label=页面" "name=pageId" "value=@pageId" "list=::getProductPageList" "text=::getProductPageText" "defaultText=请选择" "hiddenName=pageName"}}
      {{::callBlockHandle "select" this}}
    {{/params-expression}}
{{else compare linkType "==" "5" }}
<div class="form-group">
    <label class="col-sm-4 control-label">商品编码</label>
    <div class="col-sm-8">
      <input type="hidden" name="productNo"  value="{{productNo}}" />
      <div class="input-group">
        <input type="text" class="form-control"  name="productName"  value="{{productName}}" readonly data-required="true"/> 
        <span class="input-group-btn"><button class="btn btn-default" type="button" data-role="productSelected">选择</button> </span>
      </div>
    </div>
</div>    
{{else compare linkType "==" "6" }}
    {{#params-expression "label=热门关键字" "name=pageId" "value=@pageId" "list=::getHotKeyWordList" "text=::getHotKeyWordText" "defaultText=请选择" "hiddenName=pageName"}}
      {{::callBlockHandle "select" this}}
    {{/params-expression}}    
{{else}}

{{/compare}}
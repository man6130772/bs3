<div class="form-group">
    <label class="col-sm-4 control-label">{{label}}</label>
    <div class="col-sm-8">
        {{#compare readOnly "=="  "true"}}
            {{::setDataValue this "readOnly" "readOnly"}}
        {{else}}
            {{::setDataValue this "readOnly" ""}}
        {{/compare}}

        <input type="text" name="{{name}}" class="form-control" value="{{value}}" 
        {{#compare isRequired "=="  "false"}}
        {{else}}
         data-required="true" 
        {{/compare}}
         {{maxLength}} {{readOnly}}>
    </div>
</div>
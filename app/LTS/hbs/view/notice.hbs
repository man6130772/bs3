<div class="module-box {{layout}}" style="{{::getHeight height}}">
{{#if_design_mode}}
    {{::initArray this "list" 2}}
    {{::arrayToIndexItem list}}

    <div class="table-box" style="{{::getHeight height}}" >
	    <div class="img-item">
	        {{::callBlockHandle "image" list.item0}}
	    </div>

	    <div class="text-item swiper-wrapper"  style="{{::getHeight height}}" >
		    <div class="swiper-slide">
		    	<a class="item-title" {{::href}}>
					<span class="item-tag">{{list.item0.tag}}</span>{{list.item0.title}}
	         	</a>
	    	</div>
	    </div>
    </div>
{{else}}
	{{::initArray this "list" 2}}
    {{::arrayToIndexItem list}}
    <div class="table-box swiper-container vertical" style="{{::getHeight height}}" >
		<div class="img-item">
	        {{::callBlockHandle "image" list.item0}}
	    </div>
		<div class="text-item swiper-wrapper" style="{{::getHeight height}}"  >
		{{#eachArray list this}}
		<div class="swiper-slide">
			<a class="item-title" href="{{::callBlockHandle "getLink" value}}">
			<span class="item-tag">{{value.tag}}</span>
	        {{value.title}}</a>
	    </div>
		{{/eachArray}}
		</div>
	</div>
{{/if_design_mode}}    
</div>
{{::callBlockHandle "footer" this}}
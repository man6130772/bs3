<div class="module-box column-count-2 column-gap-xs {{layout}}">
{{::initArray this "list" 2}}
{{#eachArray list this}}
	<div class="item">
		<div class="row-image" style="{{::getHeight parent.height}}">
			{{::callBlockHandle "image" value}}
		</div>
		<div class="row-title" align="center">
			<a class="item-title" {{#if_design_mode}} {{::href}} {{else}} 	href="{{::callBlockHandle "getLink" this}}" {{/if_design_mode}}>{{value.title}}</a>
		</div>
	</div>
{{/eachArray}}
</div>
{{::callBlockHandle "footer" this}}